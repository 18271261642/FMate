<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <com.hjq.shape.layout.ShapeLinearLayout
        app:shape_radius="8dp"
        android:layout_margin="3dp"
        app:shape_solidColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:orientation="vertical">


        <TextView
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_17"
            android:padding="5dp"
            android:textColor="@color/main_text_color"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义间隔"/>



        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/dialogMediaRepeatEdit"
            app:shape_radius="5dp"
            android:layout_marginTop="20dp"
            app:shape_strokeWidth="@dimen/text_size_1"
            app:shape="rectangle"
            android:inputType="number"
            app:shape_strokeColor="@color/wx_bg_color"
            android:background="@null"
            android:hint="输入间隔"
            android:padding="8dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/dialogMediaRepeatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18"
            android:text="确定"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            app:shape_radius="5dp"
            app:shape="rectangle"
            app:shape_solidColor="@color/color_main_green"
            android:layout_gravity="center"/>


    </com.hjq.shape.layout.ShapeLinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>