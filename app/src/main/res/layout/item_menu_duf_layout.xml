<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/deviceMenuDfuLayout"
    android:background="@drawable/selector_bg_white_gray"
    android:paddingTop="6dp"
    android:layout_marginTop="1dp"
    android:paddingBottom="6dp"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/dfuMenuRightImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@mipmap/icon_device_update"/>


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dfuMenuRightImg"
        android:id="@+id/dfuMenuTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxEms="14"
        android:singleLine="true"
        android:text="固件更新"
        android:textColor="@color/bottom_nav_text_dim"
        android:textSize="@dimen/text_size_18" />


    <View
        android:id="@+id/dfuMenuPotinView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dfuMenuTitleTv"
        android:layout_marginStart="7dp"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:visibility="invisible"
        android:background="@drawable/red_point_shap"/>


    <TextView
        android:id="@+id/dfuMenuContentTv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dfuMenuImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="12"
        android:layout_marginEnd="15dp"
        android:singleLine="true" />




    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/dfuMenuImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@mipmap/right_back" />

</androidx.constraintlayout.widget.ConstraintLayout>